<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.teammimosa.pupalert_android.fragment.FragmentAccount">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/account_signed_out"
        android:layout_height="fill_parent">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:text="Sign in with Google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/account_picture_out"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_person_black"
            android:tint="#bababa"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circular"
            android:id="@+id/view" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/account_signed_in"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="280dp"
            android:text="name name name name "
            android:textSize="25dp" />

        <TextView
            android:id="@+id/total_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:text="xxxx total posts" />

        <Button
            android:id="@+id/signout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:backgroundTint="#ffffff"
            android:text="Sign out" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/account_picture_in"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_marginTop="35dp"
            app:civ_border_width="2dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/circular" />





    </RelativeLayout>


</FrameLayout>
